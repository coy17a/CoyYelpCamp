<% include ../partials/header %>
<header class="main">
    <div class="container">
    <h1> Welcome to YelpCamp </h1>
    <p> View our hand-picked Campgrounds</p>
    <p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Camp</a>
    </p>
</div>
</header>
    <div class="container index">
       

        <div class = "listcamps">
            <% campgrounds.forEach(function(camp){ %>
                <div class = "">
                   <div class= "thumbnail">
                        <img  src="<%= camp.image %>">
                   </div>
                     
                       <div class="caption">
                        <h4> <%= camp.name%>
                        </h4>
                    </div>
                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary"> More Info</a>
                </div>
                <%});%>
         </div>       
    </div>


<% include ../partials/footer %>